{
  "name": "antonioR",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "-": "--------------------------- ⭐️ BASE ⭐️ -------------------------------",
    "android": "yarn android:prod && yarn android:stg && yarn android:dev",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "clean": "npx react-native clean",
    "--": "---------------------------- ⭐️ GLOBAL ⭐️ -------------------------------",
    "i": "yarn && ( cd ios && bundle exec pod install --repo-update)",
    "node:clean": "rm -rf node_modules&& yarn cache clean && yarn install",
    "kn": "killall node",
    "postinstall": "patch-package",
    "---": "---------------------------- ⭐️ IOS ⭐️ ----------------------------------",
    "pod": "cd ios && pod install --repo-update",
    "podCleani": "cd ios && rm -rf Pods && rm Podfile.lock && pod install",
    "podUpdate": "cd ios && pod install --repo-update",
    "podReset": "cd ios && pod deintegrate && pod setup && pod install",
    "cleani": "rm -rf node_modules || true &&yarn rm -f yarn.lock || true && rm -rf ./ios/Pods || true && rm -rf ./ios/Podfile.lock || true && yarn cache clean && yarn && (cd ios && pod install)",
    "logIos": "npx react-native log-ios",
    "xcodeClean": "killall XCBBuildService",
    "ios:dev": "react-native run-ios --scheme dev",
    "ios:stg": "react-native run-ios --scheme stg",
    "ios:prod": "react-native run-ios --scheme shoutNewArhitecture",
    "ios:all": "yarn ios:dev && yarn ios:stg && yarn ios:prod",
    "----": "---------------------------- ⭐️ ANDROID ⭐️ --------------------------------",
    "cleana": "rm -rf node_modules && rm -rf build && rm yarn.lock && rm -rf ./android/app/build && rm -rf ./android/.gradle && yarn cache clean && yarn && cd android && ./gradlew clean -x lint && cd ..",
    "adb-r": "adb reverse tcp:8081 tcp:8081",
    "gradleClean": "cd android && ./gradlew clean -x lint && cd ..",
    "gradleSync": "cd android && ./gradlew build -x lint && cd ..",
    "logAndroid": "npx react-native log-android",
    "-----": "----------------------- ⭐️ ANDROID / Release ⭐️ ---------------------------",
    "aBuild": "cd android && ./gradlew bundleRelease -x lint",
    "aBuild:dev": "cd android && ./gradlew bundleDevRelease -x lint",
    "aBuild:stg": "cd android && ./gradlew bundleStgRelease -x lint",
    "aBuild:prod": "cd android && ./gradlew bundleProdRelease -x lint",
    "aInstallProd": "install-aab --bundle android/app/build/outputs/bundle/prodRelease/app-prod-release.aab",
    "aInstallDev": "install-aab --bundle android/app/build/outputs/bundle/devRelease/app-dev-release.aab",
    "aInstallStg": "install-aab --bundle android/app/build/outputs/bundle/stgRelease/app-stg-release.aab",
    "aDevFull": "yarn aBuild:dev && yarn aInstallDev",
    "aStagingFull": "yarn aBuild:stg && yarn aInstallStg",
    "aProdFull": "yarn aBuild:prod && yarn aInstallProd",
    "aProd": "cd android && ./gradlew bundleRelease && cd android &&install-aab --bundle android/app/build/outputs/bundle/prodRelease/app-prod-release.aab",
    "------": "----------------------- ⭐️ ANDROID / debug ⭐️ ---------------------------",
    "android:prod": "react-native run-android --mode=prodDebug --appId=com.unidosh.shout && yarn adInstallProd",
    "android:dev": "react-native run-android --mode=devDebug --appId=com.unidosh.shout.dev && yarn adInstallDev",
    "android:stg": "react-native run-android --mode=stgDebug --appId=com.unidosh.shout.stg && yarn adInstallStg",
    "adInstallProd": "adb install android/app/build/outputs/apk/prod/debug/app-prod-debug.apk",
    "adInstallDev": "adb install android/app/build/outputs/apk/dev/debug/app-dev-debug.apk",
    "adInstallStg": "adb install android/app/build/outputs/apk/stg/debug/app-stg-debug.apk"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "add": "^2.0.6",
    "react": "19.1.0",
    "react-native": "0.81.0",
    "react-native-config": "^1.5.6",
    "react-native-openai": "^0.6.2",
    "react-native-safe-area-context": "^5.5.2",
    "reactotron-core-client": "^2.9.7",
    "reactotron-react-native": "^5.1.15",
    "reactotron-redux": "^3.2.0",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.81.0",
    "@react-native/eslint-config": "0.81.0",
    "@react-native/metro-config": "0.81.0",
    "@react-native/typescript-config": "0.81.0",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "patch-package": "^8.0.0",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  }
}
